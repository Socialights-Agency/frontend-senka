<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body id="productDetail">
    <header>
        <%- include('../partials/nav'); %>
    </header>

    <section class="banner-jumbo">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 col-lg-6 box-item-left">
                    <!-- Swiper -->
                    <div class="swiper banner-product-detail">
                        <div class="swiper-wrapper">
                            <% if(product.product_banner && product.product_banner.length > 0) { %>
                            <% product.product_banner.forEach(b => { %>
                            <div class="swiper-slide">
                                <div class="box-img">
                                    <img src="<%-b.image %> " class="lazy img-fluid bg-product" alt="background">
                                </div>
                            </div>
                            <% }) %>
                            <% } %>
                        </div>
                        <div class="swiper-pagination"></div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 box-item-right">
                    <div class="box-card">
                        <div class="title-product" data-aos="fade-up" data-aos-easing="linear" data-aos-duration="400">
                            <h1 class="text-title"><%- product.name %> </h1>
                        </div>
                        <ul class="nav nav-pills box-tabs mb-3" role="tablist" data-aos="fade-up"
                            data-aos-easing="linear" data-aos-duration="400" data-aos-delay="200">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" data-bs-toggle="pill" data-bs-target="#tab-one"
                                    type="button" role="tab" aria-controls="tab-one" aria-selected="true">
                                    About
                                </button>
                            </li>
                            <% if(product.technology) { %>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" data-bs-toggle="pill" data-bs-target="#tab-two" type="button"
                                    role="tab" aria-controls="tab-two" aria-selected="false">
                                    Technology
                                </button>
                            </li>
                            <% } %>
                            <% if(product.good_to_know) { %>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" data-bs-toggle="pill" data-bs-target="#tab-twos" type="button"
                                    role="tab" aria-controls="tab-two" aria-selected="false">
                                    Good To Know
                                </button>
                            </li>
                            <% } %>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" data-bs-toggle="pill" data-bs-target="#tab-three" type="button"
                                    role="tab" aria-controls="tab-three" aria-selected="false">
                                    What’s in it?
                                </button>
                            </li>
                        </ul>
                        <div class="tab-content" id="pills-tabContent" data-aos="fade-up" data-aos-easing="linear"
                            data-aos-duration="400" data-aos-delay="400">
                            <div class="tab-pane fade show active" id="tab-one" role="tabpanel"
                                aria-labelledby="pills-tab-one">
                                <%-product.about %>
                            </div>
                            <% if(product.technology) { %>
                            <div class="tab-pane fade" id="tab-two" role="tabpanel" aria-labelledby="pills-tab-two">
                                <%-product.technology %>
                            </div>
                            <% } %>
                            <div class="tab-pane fade" id="tab-three" role="tabpanel" aria-labelledby="pills-tab-three">
                                <%-product.whats_in %>
                            </div>
                            <% if(product.good_to_know) { %>
                            <div class="tab-pane fade" id="tab-twos" role="tabpanel" aria-labelledby="pills-tab-two">
                                <%-product.good_to_know %>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
            <img src="/assets/images/product/shadow-banner.webp" class="lazy img-fluid shadow-banner" alt="background">
        </div>
    </section>

    <section class="section-one">
        <div class="container-fluid">
            <div class="row box-one">
                <img src="/assets/images/product/bg-shadow-desktop.png" class="lazy img-fluid shadow-img" alt="product">
                <div class="col-12 col-md-7 box-left">
                    <div class="item-box">
                        <% if(product.whip_img) { %>
                        <img src="<%-product.whip_img %> " class="lazy img-fluid foam" alt="product" data-aos="fade-up"
                            data-aos-easing="linear" data-aos-duration="200">
                        <% } else { %>
                            <img src="/assets/images/product/spw/foam.webp" class="lazy img-fluid foam aos-init aos-animate" alt="product" data-aos="fade-up" data-aos-easing="linear" data-aos-duration="400" style="visibility: hidden;">
                        <% } %>
                        <div class="box-product" data-aos="fade-up" data-aos-easing="linear" data-aos-duration="400"
                            data-aos-delay="300">
                            <% if(product.product_packaging && product.product_packaging.length > 0) { %>
                            <% product.product_packaging.forEach(p => { %>
                            <div class="product-one">
                                <img src="<%- p.image %> " class="lazy img-fluid product-lg" alt="product">
                                <div class="category"><%- p.name %> </div>
                            </div>
                            <% }) %>
                            <% } %>
                        </div>
                    </div>
                    <div class="box-button d-flex d-md-none">
                        <button type="button" class="btn btn-blue" data-bs-toggle="modal" data-bs-target="#modalStore">
                            Buy Now
                        </button>
                    </div>
                </div>
                <div class="col-12 col-md-5 box-right">
                    <% if(product.product_review && product.product_review.length > 0 ) { %>
                    <div class="item-box" data-aos="fade-up" data-aos-easing="linear" data-aos-duration="400"
                        data-aos-delay="400">
                        <div class="swiper swiper-product">
                            <div class="swiper-wrapper">

                                <% product.product_review.forEach(r => { %>
                                <% if(r.label === 'product') { %>
                                <div class="swiper-slide">
                                    <div class="box-img">
                                        <img src="<%-r.photo %> " class="lazy img-fluid avatar" alt="avatar">
                                    </div>
                                    <div class="box-profile">
                                        <div class="name-old">
                                            <span class="fw-bold"><%-r.name %> </span>
                                            <span class="fw-bold">(<%-r.age %> , <%-r.city %> )</span>
                                        </div>
                                        <div class="result-senka">
                                            <%-r.problem %>
                                        </div>
                                    </div>
                                    <div class="box-icon">
                                        <% for(var i = 0; i<r.rating; i++) { %>
                                        <i class="bi bi-star-fill"></i>
                                        <% } %>
                                    </div>
                                    <div class="box-desc">
                                        “<%-r.review %> ”
                                    </div>
                                    <div class="review-brand">
                                        Review by <%-r.review_by %>
                                    </div>
                                </div>
                                <% } %>
                                <% }) %>

                            </div>
                            <div class="swiper-button-next"></div>
                            <div class="swiper-button-prev"></div>
                        </div>
                    </div>
                    <% } %>
                </div>
                <div class="box-button d-none d-md-flex" data-aos="fade-up" data-aos-easing="linear"
                    data-aos-duration="400" data-aos-delay="400">
                    <button type="button" class="btn btn-blue" data-bs-toggle="modal" data-bs-target="#modalStore">
                        Buy Now
                    </button>
                </div>
            </div>
            <div class="row box-two">
                <div class="col-12 col-md-6 box-left">
                    <div class="item-box" data-aos="fade-up" data-aos-easing="linear" data-aos-duration="400">
                        <div class="title-box">How to Use</div>
                        <ol class="list-step">
                            <%-nl2br(product.howto) %>
                        </ol>
                    </div>
                </div>
                <div class="col-12 col-md-6 box-right">
                    <div class="item-box">
                        <div class="title-box">How to Use</div>
                        <% if(product.howto_url) { %>
                        <div class="box-video" data-aos="fade-up" data-aos-easing="linear" data-aos-duration="400">
                            <div class="youtube-container">
                                <div class="youtube-player" data-id="<%-product.howto_url %>"></div>
                            </div>
                        </div>
                        <% } else { %>
                            <% if(product.howto_img ) { %>
                                <div class="box-img" data-aos="fade-up" data-aos-easing="linear" data-aos-duration="400">
                                    <img src="<%-product.howto_img %> " class="lazy img-fluid how" alt="how">
                                </div>
                            <% } %>
                        <% } %>
                    </div>
                </div>
            </div>
            <!-- Modal -->
            <div class="modal fade" id="modalStore" tabindex="-1" aria-labelledby="modalStore" aria-hidden="true">
                <div class="modal-dialog modal-dialog-scrollable">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">
                                Senka Official Store
                            </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                                <i class="bi bi-x-circle"></i>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="box-list">
                                <div class="row">
                                    <% if(product.product_store && product.product_store.length> 0) { %>
                                    <% product.product_store.forEach(ps => { %>
                                    <% if(ps.location == 'Shopee') { %>
                                    <div class="col-6 col-md-12">
                                        <a href="<%-ps.url %>" target="_blank" rel="noopener noreferrer" class="link-store">
                                            <div class="list-item">
                                                <img src="/assets/images/official-store/os-shopee.png"
                                                    class="lazy img-fluid img-store" alt="store">
                                            </div>
                                        </a>
                                    </div>
                                    <% } %>
                                    <% if(ps.location == 'Tokopedia') { %>
                                    <div class="col-6 col-md-12">
                                        <a href="<%-ps.url %>" target="_blank" rel="noopener noreferrer" class="link-store">
                                            <div class="list-item">
                                                <img src="/assets/images/official-store/os-tokopedia.png"
                                                    class="lazy img-fluid img-store" alt="store">
                                            </div>
                                        </a>
                                    </div>
                                    <% } %>
                                    <% if(ps.location == 'Sociolla') { %>
                                    <div class="col-6 col-md-12">
                                        <a href="<%-ps.url %>" target="_blank" rel="noopener noreferrer" class="link-store">
                                            <div class="list-item">
                                                <img src="/assets/images/official-store/os-sociolla.png"
                                                    class="lazy img-fluid img-store" alt="store">
                                            </div>
                                        </a>
                                    </div>
                                    <% } %>
                                    <% if(ps.location == 'Watson') { %>
                                    <div class="col-6 col-md-12">
                                        <a href="#" target="_blank" rel="noopener noreferrer" class="link-store">
                                            <div class="list-item">
                                                <img src="/assets/images/official-store/os-watsons.png"
                                                    class="lazy img-fluid img-store" alt="store">
                                            </div>
                                        </a>
                                    </div>
                                    <% } %>
                                    <% if(ps.location == 'Alfacart') { %>
                                    <div class="col-6 col-md-12">
                                        <a href="<%-ps.url %>" target="_blank" rel="noopener noreferrer" class="link-store">
                                            <div class="list-item">
                                                <img src="/assets/images/official-store/os-alfacart.png"
                                                    class="lazy img-fluid img-store" alt="store">
                                            </div>
                                        </a>
                                    </div>
                                    <% } %>
                                    <% if(ps.location == 'Indomaret') { %>
                                    <div class="col-6 col-md-12">
                                        <a href="<%-ps.url %>" target="_blank" rel="noopener noreferrer" class="link-store">
                                            <div class="list-item">
                                                <img src="/assets/images/official-store/os-indomart.png"
                                                    class="lazy img-fluid img-store" alt="store">
                                            </div>
                                        </a>
                                    </div>
                                    <% } %>
                                    <% if(ps.location == 'Tiktok') { %>
                                    <div class="col-6 col-md-12">
                                        <a href="<%-ps.url %>" target="_blank" rel="noopener noreferrer" class="link-store">
                                            <div class="list-item">
                                                <img src="/assets/images/official-store/os-tiktok.png"
                                                    class="lazy img-fluid img-store" alt="store">
                                            </div>
                                        </a>
                                    </div>
                                    <% } %>
                                    <% if(ps.location == 'Blibli') { %>
                                    <div class="col-6 col-md-12">
                                        <a href="<%-ps.url %>" target="_blank" rel="noopener noreferrer" class="link-store">
                                            <div class="list-item">
                                                <img src="/assets/images/official-store/os-blibli.png"
                                                    class="lazy img-fluid img-store" alt="store">
                                            </div>
                                        </a>
                                    </div>
                                    <% } %>
                                    <% if(ps.location == 'Lazada') { %>
                                    <div class="col-6 col-md-12">
                                        <a href="<%-ps.url %>" target="_blank" rel="noopener noreferrer" class="link-store">
                                            <div class="list-item">
                                                <img src="/assets/images/official-store/os-lazada.png"
                                                    class="lazy img-fluid img-store" alt="store">
                                            </div>
                                        </a>
                                    </div>
                                    <% } %>
                                    <% if(ps.location == 'JDID') { %>
                                    <div class="col-6 col-md-12">
                                        <a href="<%-ps.url %>" target="_blank" rel="noopener noreferrer" class="link-store">
                                            <div class="list-item">
                                                <img src="/assets/images/official-store/os-jdid.png"
                                                    class="lazy img-fluid img-store" alt="store">
                                            </div>
                                        </a>
                                    </div>
                                    <% } %>
                                    <% }) %>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <% if(product.product_similar && product.product_similar.length>0) { %>
    <section class="section-two">
        <div class="container">
            <div class="title-section" data-aos="fade-up" data-aos-easing="linear" data-aos-duration="400">
                You might also love:
            </div>
            <div class="box-desktop">
                <div class="row">
                    <% if(product.product_similar && product.product_similar.length>0) { %>
                    <% var delay = 500 %>
                    <% product.product_similar.forEach(ps => { %>
                    <div class="col-6 col-md-4 box-item" data-aos="fade-up" data-aos-easing="linear"
                        data-aos-duration="400" data-aos-delay="<%-delay%> ">
                        <a href="/product/<%-ps.product_detail.permalink %> " target="_self" rel="noopener noreferrer"
                            class="link-product">
                            <div class="box-img">
                                <img src="<%-ps.product_detail.thumbnail %> " class="lazy img-fluid product"
                                    alt="product">
                            </div>
                            <div class="title-product">
                                <%-ps.product_detail.name %>
                            </div>
                        </a>
                    </div>
                    <% delay += 200 %>
                    <% }) %>
                    <% } %>
                </div>
            </div>
            <div class="box-mobile">
                <div class="swiper swiper-pd-recom">
                    <div class="swiper-wrapper">
                        <% if(product.product_similar && product.product_similar.length>0) { %>
                        <% product.product_similar.forEach(ps => { %>

                        <div class="swiper-slide">
                            <div class="col box-item">
                                <div class="link-product">
                                    <div class="box-img">
                                        <a href="/product/<%-ps.product_detail.permalink %> " target="_self"
                                            rel="noopener noreferrer">
                                            <img src="<%-ps.product_detail.thumbnail %>" class="lazy img-fluid product"
                                                alt="product">
                                        </a>
                                    </div>
                                    <div class="title-product">
                                        <%-ps.product_detail.name %>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <% }) %>
                        <% } %>
                    </div>
                    <div class="swiper-button-next"></div>
                    <div class="swiper-button-prev"></div>
                </div>
            </div>
        </div>
    </section>
    <% } %>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>
    <%- include('../partials/script'); %>
</body>

</html>